<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6"
   >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvmain"
                android:textColor="#000000"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:elevation="24dp"
                android:text="ARBIT QUIZ"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25dp"
                android:background="@drawable/myrect"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/ivwhere"
                    android:layout_width="36dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_map" />

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvw1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="WHERE"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvwhere"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="PG BLOCK"
                        android:textSize="18dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="56dp"
                    android:src="@drawable/calendar" />

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="WHEN"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvwhen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="2:00PM-4:00PM"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:layout_margin="9dp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="          " />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="56dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/rupee" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="REGISTRATION FEE :"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvfees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:text="Rs.200"
                    android:textSize="18dp" />

            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:layout_margin="9dp"/>
            <LinearLayout
                android:id="@+id/rv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/ivwinner"
                    android:layout_width="36dp"
                    android:layout_height="56dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/awards" />

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvw4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="WINNER "
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvwinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="Rs.4000"
                        android:textSize="18dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="56dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/awards" />

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="RUNNER UP "
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvrunner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="Rs.2500"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:layout_margin="9dp"/>
            <LinearLayout
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="56dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/manager" />

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="COORDINATOR"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvcoordinate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="VIVEK RAMAC  9632580051"
                        android:textSize="18dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="56dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/users" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="TEAM OF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="4"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:layout_margin="9dp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="56dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/theatre" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="DESCRIPTION"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvevent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:padding="2dp"
                        android:text="A Event Filled with fun and total excitement for everyone."
                        android:textSize="18dp" />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:layout_margin="9dp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="56dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/rules" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="RULES AND REGULATIONS"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvrules"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:padding="2dp"
                        android:text="Paragraph"
                        android:textSize="18dp"
                        android:background="#ffe766"/>

                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/angry_btn"

                android:text="REGISTER"
                android:textColor="#000000"
                android:textSize="30sp"
                android:layout_margin="9dp"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:background="@drawable/button_shape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:elevation="24dp"
                />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
